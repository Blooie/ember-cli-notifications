<div
  class={{concat
         (get this.styles "c-notification") ' '
         this.dismissClass ' '
         this.clickableClass ' '
         this.processedType ' '
         this.notification.cssClasses
        }}
  data-test-notification-message={{this.notification.type}}
  {{on 'mousedown' this.onMouseDown}}
  {{on 'mouseenter' this.onMouseEnter}}
  {{on 'mouseleave' this.onMouseLeave}}
>
  <div class={{get this.styles "c-notification__icon"}}>
    <i class="{{notificationIcon}}"></i>
  </div>
  <div class={{get this.styles "c-notification__content"}}>
    {{#if notification.htmlContent}}
      {{{notification.message}}}
    {{else}}
      {{notification.message}}
    {{/if}}
    <div 
      class={{get this.styles "c-notification__close"}} 
      {{action "removeNotification"}} 
      title="Dismiss this notification">
      <i class="{{closeIcon}}"></i>
    </div>
  </div>
  {{#if notification.autoClear}}
    <div 
      class={{get this.styles "c-notification__countdown"}} 
      style={{notificationClearDuration}}
    >
    </div>
  {{/if}}
</div>
